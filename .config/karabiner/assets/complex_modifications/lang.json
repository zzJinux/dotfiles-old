{
    "title": "Languages",
    "rules": [
        {
            "description": "F16 to option + space",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f16",
                        "modifiers": {
                            "optional": [
                                "caps_lock"

                            ]
                        }


                    },
                    "to": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_alt"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "ESC to English",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_unless",
                            "input_sources": [
                                {
                                    "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Right_command to Gureum_KO <-> Gureum_EN",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "input_source_id": "^org\\.youknowone\\.inputmethod\\.Gureum\\.han2$"
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "input_source_id": "^org\\.youknowone\\.inputmethod\\.Gureum\\.system$"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "input_source_id": "^org\\.youknowone\\.inputmethod\\.Gureum\\.system$"
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "input_source_id": "^org\\.youknowone\\.inputmethod\\.Gureum\\.han2$"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
